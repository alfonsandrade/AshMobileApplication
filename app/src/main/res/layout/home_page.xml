<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_bg">

    <ImageView
        android:id="@+id/ashblueappicon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ashblueonlyicon"
        app:layout_constraintBottom_toTopOf="@+id/ashblueonlytext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ashblueonlytext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/ashblueonlytext"
        app:layout_constraintBottom_toTopOf="@+id/catch_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ashblueappicon" />

    <ImageButton
        android:id="@+id/catch_button"
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ash_catch_button"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/schedule_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp" />

    <ImageButton
        android:id="@+id/schedule_button"
        android:layout_width="360dp"
        android:layout_height="180dp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:src="@drawable/ash_schedule_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/battery_icon"
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:src="@drawable/ash_battery_0"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="10dp" />

</androidx.constraintlayout.widget.ConstraintLayout>